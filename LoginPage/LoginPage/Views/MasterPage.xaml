<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginPage.Views.MasterPage"
             Title="Master">
    <StackLayout VerticalOptions="Center" >
        <Image Source="inteclg.png" HeightRequest="150" WidthRequest="150" Margin="0,0,0,40"/>
        <Button Text="Home" Command="{Binding HomeOnTapped}"/>

        <Button Text="Personal Area" Command="{Binding PersonalAreaOnTapped}"/>

        <Button Text="Courses" Command="{Binding CoursesOnTapped}"/>
    </StackLayout>
</ContentPage>