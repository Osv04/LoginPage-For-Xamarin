<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginPage.Views.MainPage"
             xmlns:viewModels="clr-namespace:LoginPage.ViewModels">

    <ContentPage.BindingContext>
        <viewModels:MainViewModel>

        </viewModels:MainViewModel>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout VerticalOptions="Center">
            <Image Source="iconintec.png" HeightRequest="150" WidthRequest="150"/>
            
            <Entry  Placeholder="Email" Text="{Binding Email}"/>
            
            <Entry x:Name="passwordEntry" HorizontalOptions="FillAndExpand" Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>

            <Button Text="Login" TextColor="White" BackgroundColor="Red" Command="{Binding OnLoginCommand}"/>
            
            <Label Text="Sign Up" HorizontalOptions="Center" TextDecorations="Underline" FontSize="Medium" TextColor="Red" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OnSignUpMoveCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ScrollView>
</ContentPage>